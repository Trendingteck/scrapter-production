datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  password       String
  emailVerified  DateTime?
  verificationToken String?     @unique
  name           String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  subscription   Subscription?
  usageLogs      UsageLog[]
  scrapedData    ScrapedData[]
  sessions       Session[]
  settings       UserSettings?
  chatSessions   ChatSession[]
}

model UserSettings {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  maxSteps          Int      @default(100)
  useVision         Boolean  @default(false)
  firewallRules     Json?    @default("[]")
  modelProviders    Json?    @default("{}")
  generalSettings   Json?    @default("{}")
  agentModels       Json     @default("{}")
  updatedAt         DateTime @updatedAt
}

model Subscription {
  id             String         @id @default(cuid())
  userId         String         @unique
  user           User           @relation(fields: [userId], references: [id])
  plan           PlanType       @default(FREE)
  status         SubStatus      @default(ACTIVE)
  stripeCustomerId String?      @unique
  stripeSubscriptionId String?  @unique
  currentPeriodEnd DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model UsageLog {
  id             String         @id @default(cuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id])
  actionType     String         // e.g., "CHAT_COMPLETION", "VIDEO_OCR", "CAPTCHA_SOLVE"
  tokensUsed     Int?
  cost           Float?
  metadata       Json?
  createdAt      DateTime       @default(now())
}

model ScrapedData {
  id             String         @id @default(cuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id])
  sourceUrl      String
  content        String         @db.Text
  createdAt      DateTime       @default(now())
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatSession {
  id                String         @id @default(cuid())
  userId            String
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  title             String
  messageCount      Int            @default(0)
  agentStateHistory Json?          // Stores { task: string, history: string, timestamp: number }
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  messages          ChatMessage[]

  @@index([userId])
}

model ChatMessage {
  id          String      @id @default(cuid())
  sessionId   String
  session     ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  actor       String      // "USER", "PLANNER", "NAVIGATOR", "SYSTEM", etc.
  content     String      @db.Text
  timestamp   DateTime    @default(now())
  metadata    Json?

  @@index([sessionId])
}

enum PlanType {
  FREE
  PRO
  ENTERPRISE
}

enum SubStatus {
  ACTIVE
  CANCELED
  PAST_DUE
}
