{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "tsx --env-file=.env src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js --external:@prisma/client --external:bcryptjs --external:hono --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "start": "node dist/index.js",
    "postinstall": "prisma generate --schema=../../packages/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hono/node-server": "^1.19.6",
    "@prisma/client": "^6.19.1",
    "@scrapter/database": "workspace:^",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "hono": "^4.11.1",
    "openai": "^6.13.0",
    "resend": "^6.6.0",
    "stripe": "^20.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.11.17",
    "esbuild": "^0.25.1",
    "prisma": "^6.19.1",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
